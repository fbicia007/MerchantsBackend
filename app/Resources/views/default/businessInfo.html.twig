                    <label class="checkbox-inline col-md-2">
                        <input type="checkbox" id="thai" value="thai"> Thai
                    </label>
                    <label class="checkbox-inline col-md-2">
                        <input type="checkbox" id="arabic" value="arabic"> Arabic
                    </label>
                    -->
                </div>
                <br>

                <div class="form-group" style="margin-top: 15%;">
                    <label>File Upload (Applying to IOS & Android)</label>
                    <div style="margin-bottom: 2%;">Thumb of Store</div>
                    <div style="border: 1px solid #ccc!important; height: 141px;">
                        <input type="file" id="thumb">
                        <p class="help-block">Your profile picture(jpg/png) must be smaller than 1 MB in file size.</p>
                    </div>

                    <div style="margin: 2% 0 2% 0;">Five Pictures of Store Interior</div>
                    <div style="border: 1px solid #ccc!important; height: 141px;">
                        <input type="file" id="pictures" multiple="multiple">
                        <p class="help-block">Your profile picture(jpg/png) must be smaller than 1 MB in file size.</p>
                    </div>
                </div>

                <a href="/">
                    <button type="button" class="btn btn-danger" style="margin-top: 36.5%;">Cancel</button>
                </a>

            </div>

            {{ form_end(myForm) }}


    </div><!-- /.container -->

{% endblock %}

