                    <label class="checkbox-inline col-md-2">
                        <input type="checkbox" id="maestro" value="maestro"><img style="width: 30px;" src="img/payment/3.png">
                    </label>
                    -->
                </div>

                <div class="form-group" style="margin-top: 15%;">
                    <label for="storeName">Service Language</label>
                    <div></div>
                    {% for language in myForm.language %}
                        <label class="checkbox-inline col-md-2">
                            {{ form_errors(language) }}
                            {{ form_widget(language) }}
                        </label>
                    {% endfor %}
                    <!--
                    <label class="checkbox-inline col-md-2">
                        <input type="checkbox" id="english" value="english"> English
                    </label>
                    <label class="checkbox-inline col-md-2">
                        <input type="checkbox" id="chinese" value="chinese"> Chinese
                    </label>
                    <label class="checkbox-inline col-md-2">
                        <input type="checkbox" id="russian" value="russian"> Russian
                    </label>
                    <label class="checkbox-inline col-md-2">
                        <input type="checkbox" id="japanese" value="japanese"> Japanese
                    </label>
